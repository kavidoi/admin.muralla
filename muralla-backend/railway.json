{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "pnpm --filter muralla-backend run start:prod",
    "preDeployCommand": "pnpm --filter muralla-backend exec prisma generate && pnpm --filter muralla-backend exec prisma migrate deploy",
    "healthcheckPath": "/healthz",
    "healthcheckTimeout": 100,
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
